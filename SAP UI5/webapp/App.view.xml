<mvc:View controllerName="webapp.controller.App" displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <App>

    <Page title="AGENDA" showNavButton="true" navButtonTap="handleNavBack">
      <content>
        <HBox width="100%">

          <VBox width="50%">

          </VBox>

          <HBox width="50%" id="div" visible="true" justifyContent="Right">
            <Label id="divList" />
          </HBox>
        </HBox>
      </content>

      <content>
        <Table items="{/students}" >
          <headerToolbar>
            <Toolbar>
              <ToolbarSpacer></ToolbarSpacer>
              <Button icon="sap-icon://add" text="Add Contato" press="handleAddContato"></Button>
            </Toolbar>
          </headerToolbar>
          <columns>
            <Column>
              <Text text="Nome"/>
            </Column>
            <Column>
              <Text text="EndereÃ§o"/>
            </Column>
            <Column>
              <Text text="Telefone"/>
            </Column>
            <Column>
              <Text text="Editar/Deletar" />
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <ObjectIdentifier title="{namePerson}"/>
                <Text text="{address}"/>
                <Text text="{phone}"/>
                <HBox>
                  <Button icon="sap-icon://edit" press="handleEditStudent"></Button>
                  <Button icon="sap-icon://delete" press="handleDeleteStudent"> </Button>
                  </HBox>
                </cells>
                <Button text="Save" type="Accept" press="handleSaveBtnPress"></Button>
              </ColumnListItem>
            </items>
          </Table>

        </content>

        <footer>
          <Toolbar>
            <content>
              <ToolbarSpacer></ToolbarSpacer>

              <ToolbarSpacer></ToolbarSpacer>
            </content>
          </Toolbar>
        </footer>
      </Page>
    </App>
  </mvc:View>
